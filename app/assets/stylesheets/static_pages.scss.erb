* {
  font-family: Arial, sans-serif;
}

h1 {
  font-family: Arial, sans-serif;
}

.jumbotron{
  background-image: url("<%= asset_path('nyc.jpg')%>");
  background-repeat: none;
  background-size: cover;
  height: 50vh;
  width: 100%;
  background-image: url("http://www.atlanta.net/_static/img/header_dining.jpg")
}

.display-3{
  background-color: rgba(255,255,255,0.5);
}
.container{
  text-align:center;
}

header {
	background: rgba(0,0,0,0.5);
}

nav {
  display: flex;
	justify-content: space-between;
  font-size: 20px;


}

#logo {
	text-align: left;
	display: inline-block;
	padding: 0px 1rem;
  color: white;
  background-image: url("http://www196.lunapic.com/do-not-link-here-use-hosting-instead/149351927679477?987326423");
  background-size: contain;
 background-repeat: no-repeat;
 color:black;

}

.logos{
 height: 80px;
 width: 200px;
}

 body.sessions_new, .registrations_create,.registrations_new{
 background-image: url("<%= asset_path('nyc.jpg')%>");
 background-repeat: none;
 background-size: cover;
 color: white;
}
.logIn{
  text-align:center;
  text-decoration-style: bold;
}
a {
  color: white;
}

a:hover {
  text-decoration: none;
}


.blue {
display: flex;
justify-content: center;
align-items: center;
background: rgba(0,0,0,0.5);
background-size: contain;
}

.green {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: black;
  background: rgba(0,0,0,0.5);
  background-size: contain;
  padding-top: 5px;
  }

ul {
  padding-top: 20px;

}

li {
	display: inline-block;
	padding: 1.5rem;

}

#about-page {
  margin: 0 auto;
  margin-top: 3rem;
  width: 700px;
  padding: 1rem;
  background: red;
  text-align: center;
  border-radius: 1rem;
  transition: all .2s ease-in-out;
}

#about-page:hover {
  box-shadow: 1px 1px 20px 1px black;
  transform: scale(1.1);
}
