*{
  font-family: arial, sans-serif;
}
body{
  background: #f2eabb
}

.jumbotron {
  background-image: url("<%= asset_path('nyc.jpg')%>");
  background-repeat: none;
  background-size: cover;
  height: 50vh;
  width: 100%;
  background-image: url("http://www.atlanta.net/_static/img/header_dining.jpg")
}

.display-3 {
  background-color: rgba(255,255,255,0.5);
}
.container {
  text-align:center;
}

header {
	background: rgba(0,0,0,0.5);
}

nav {
  display: flex;
	justify-content: space-between;
  font-size: 2rem;
  background: #333333
}

#logo {
	text-align: left;
	display: inline-block;
	padding: 0px 1rem;
  color: white;
  background-image: url("<%= asset_path('logo.png')%>");
  background-size: contain;
  background-repeat: no-repeat;
  color:black;
}

.logos{
 height: 100px;
 width: 300px;
}


body.sessions_new, .registrations_create,.registrations_new{
 background-image: url("<%= asset_path('nyc.jpg')%>");
 background-repeat: no-repeat;
 background-size: cover;
 color: white;
}
.logIn{
  text-align:center;
  text-decoration-style: bold;
}

/*a{
  color: white;
}*/

a:hover {
  text-decoration: none;
  color:white;
}

.blue {
display: flex;
justify-content: center;
align-items: center;
text-align: center;
background: rgba(0,0,0,0.5);
background-size: contain;
padding: 10px;
}


 .green {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: black;
  text-align: center;
  background: rgba(0,0,0,0.5);
  background-size: contain;
  padding: 10px;
  }

ul {
  padding-top: 20px;
}
li {
	display: inline-block;
	padding: 1.5rem;
  text-decoration:none;
}
.aboutPic{
  width: 200px;
  height: 200px;
}
#about-page {
 margin: 0 auto;
 margin-top:7rem;
 width: 700px;
 padding: 2rem;
 text-align: center;
 background: rgba(255,255,255,0.5);
 border-radius: 5%;
 transition: all .5s ease-in-out;

}
#about-page:hover, .profile:hover, .profile-show:hover {
  box-shadow: 1px 1px 20px 1px black;
  transform: scale(1.1);
}

.profile_header {
  margin-bottom: 4rem;
}
 .users_show, .posts_new {
  background-color: #f2eabb;
}


.master-container {
  display: flex;
  justify-content: space-around;
}

.show-card {
  width: 500px;
  display: inline-block;

}

.post_block{
  margin: 0;
  max-width: 1300px;
  display: inline-block;
}

.card-img-top {
  width: 300px;
  height: 300px;
}

.card-block {
  font-size: 20px;
  text-align: center;
}

#card_title a {
  color:black;

}

.list-group-item {
  background: rgba(0,0,0,0.6);
  color: white;
}

