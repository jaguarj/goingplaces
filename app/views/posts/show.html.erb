
<!-- photo add columns/stylize -->
<div class="post_show">
<img class="card-img-top" src="<%= @user.user_photo %>" style="width: 200px; height: 200px;"/>
<h1><%#= @post.title %></h1>
<p><%#= @post.content %></p>
<h2><%= @user.username %></h2>
<h2><%= @user.created_at.to_date %></h2>
<h2><%= @user.current_city %></h2>
<%= button_to "Edit Post", edit_city_post_path, :method => "get" %>
<%= button_to "Delete Post", post_delete_path(@post.id), :method => "delete", data: {
  confirm: 'Are you sure you want to delete?'
  } %>
</div>
