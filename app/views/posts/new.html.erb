<h2>New Posts</h2>

<%= form_for [@city, @post] do |f| %>

  <div class="field">
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
  <div>

  <div class="field">
    <%= f.label :content %>
    <br />
    <%= f.text_field :content %>
  <div>

  <div class="actions">
    <%= f.submit "Add new post" %>
  </div>
<% end %>
